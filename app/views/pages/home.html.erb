</head>
<!--the onload code is for iOS-->
<body onload="setTimeout(function() { window.scrollTo(0, 1) }, 500);" >
	<div id="fb-root"></div>
  	<script>
    	window.fbAsyncInit = function() {
      	//Replace appId with your own
      	FB.init({appId: '213050112074083', status: true, cookie: true,
               	xfbml: true});
    	};
    	(function() {
	  		var e = document.createElement('script'); e.async = true;
      		e.src = document.location.protocol +
       		'//connect.facebook.net/en_US/all.js';
   			document.getElementById('fb-root').appendChild(e);
  		}());
  	</script>

	<div id="homeContent">
		<div id="homeTitle">
			foodierecs.com
		</div>
		
		<div id="homeSubHeader">
			foodierecs is a community for 
			foodies and those who trust 
			the recommendations of foodies. <br /><br />

			to join, please use your facebook
			account
		</div>
		
		<div id="fbLogin">
			<div id="fb-root"></div>
		    <script>
	  			FB.Event.subscribe('auth.login', function () {
	      			/*FB.api('/me', function(response) {
					  alert(response.email);
					});*/
					//post the info we need
					FB.api('/me', function(response) {
						$.post( "<%= url_for( :controller => 'users', :only_path => false ) %>", 
							{ 'user[first_name]': response.first_name, 'user[last_name]': response.last_name,
								'user[username]': response.username, 'user[facebook_url]': response.link,
								'user[gender]': response.gender,
								'user[email]':response.email }
						);
					})
					
					//window.location = "<%= url_for( :action => 'main', :controller => 'pages', :only_path => false ) %>";
		 		});
	 		</script>
    		<script>
	        	FB.init({ 
    	        appId:'213050112074083', cookie:true, 
        	    status:true, xfbml:true 
	         });
		    </script>
    		<fb:login-button perms="email,publish_stream" redirect_uri="http://strong-frost-562.heroku.com/main">
    			Login with Facebook
    		</fb:login-button>
    	</div>
		
	</div>

</body>
</html>