    		<fb:login-button perms="email,publish_stream">
    			Login with Facebook
    		</fb:login-button>
    	</div>

		<div ><%=link_to( "all restaurants", '/restaurant', :style=>"color:#333; text-decoration:none; font-size: 2px;" )%></div>
		
	</div>

