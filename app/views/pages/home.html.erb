			to join, please use your facebook
			account
		</div>
		
		<div id="fbLogin">
			<!--
			<div id="fb-root"></div>
    			<a href="auth/facebook" class="auth_provider">
    				<%= image_tag "facebook_64.png", :size => "64x64", :alt => "Facebook" %>
    				Login with Facebook
    			</a> 
			-->
		    <script>
	  			FB.Event.subscribe('auth.login', function () {
					FB.api('/me', function(response) {
						$.post( "users/exists/" + response.username, function( data ){
							if( data == "NO" ){
								//need to create this user
								$.post( "<%= url_for( :controller => 'users', :only_path => false ) %>", 
									{ 'user[first_name]': response.first_name, 'user[last_name]': response.last_name,
										'user[username]': response.username, 'user[facebook_url]': response.link,
										'user[gender]': response.gender,
										'user[email]':response.email },
									function(response){
										//response should be the new user id
										window.location = "/session/new/" + data;
									} );
							}
							else{
								window.location = "/session/new/" + data;
							}
						});
					})
					
		 		});
	 		</script>
